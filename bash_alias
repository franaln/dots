# bash aliases
# frani 2012-2013

# ls
alias sl='ls'
alias ll='ls -lh'
alias la='ls -A'
alias l='ls -CF'

# emacs
alias emw='emacs -nw'
alias ewm='emacs -nw'
alias em='emacs'

# python
alias python='python2.7'

# lxplus
alias sx='ssh -Y falonso@lxplus.cern.ch'
alias s1='ssh -X -Y falonso@pcunlp001.cern.ch'
alias s2='ssh -X -Y falonso@pcunlp002'

# fisica.unlp.edu.ar
alias smetis='ssh -X -Y falonso@metis.fisica.unlp.edu.ar'
alias sleda='ssh -X -Y fran@leda.fisica.unlp.edu.ar'

# root
alias root='root -l'
alias rootq='root -q'

# tar
alias targz='tar -cvzf'
alias showtar='tar -tvf'
alias untargz='tar -xvzf'

# cd
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'

# music player
alias mocp='mocp -m ~/Music -T ~/.moc/config.txt'
alias ncmpcpp='ncmpcpp -c ~/.config/ncmpcpp/config'


# demas
alias matrix='echo -e "\e[32m"; while :; do printf '%*c' $(($RANDOM % 30)) $(($RANDOM % 2)); done'
alias ping='ping -c 3 www.google.com'
alias diff='colordiff'              # requires colordiff package
alias grep='grep --color=auto'
alias df='df -h'
alias du='du -sh'
alias loadfonts='df-cache -v'

