# -*- mode: sh -*-
# bash aliases
# frani

# ls
alias sl='ls'
alias ll='ls -lh'
alias la='ls -A'

# emacs
alias emw='emacs -nw'
alias ewm='emacs -nw'
alias em='emacs -nw'
alias e='emacs -nw'

# python
alias python='python2.7'

# root
alias root='root -l'
alias rootq='root -q'

# tar
alias targz='tar -cvzf'
alias showtar='tar -tvf'
alias untargz='tar -xvzf'

# cd
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'

# music player
alias mocp='mocp -m ~/Music -T ~/.moc/config.txt'
alias ncmpcpp='ncmpcpp -c ~/.config/ncmpcpp/config'


# demas
alias reload='source ~/.bashrc'
alias matrix='echo -e "\e[32m"; while :; do printf '%*c' $(($RANDOM % 30)) $(($RANDOM % 2)); done'
alias ping='ping -c 3 www.google.com'
alias diff='colordiff'              # requires colordiff package
alias grep='grep --color=auto'
alias df='df -h'
alias du='du -sh'
alias loadfonts='fc-cache -v'
alias nocomment='grep -Ev "^(#|$)"'

if [[ `uname -v` == "*Ubuntu*" ]] ; then
    # apt-get and aptitude
    alias apu='sudo apt-get update'
    alias apg='sudo apt-get upgrade'
    alias apdg='sudo apt-get dist-upgrade'
    alias api='sudo aptitude install'
    alias aps='aptitude search'
    alias apr='sudo apt-get remove'
else
    # pacman
    alias pacu='sudo pacman -Syu'
    alias paci='sudo pacman -S'
    alias pacr='sudo pacman -R'
    alias pacs='pacsearch'
    
    # packer
    alias packer='packer --auronly'
    alias auu='packer -Syu'
    alias aui='packer -S'  
    alias aur='packer -R'  
    alias aus='packer -Ss'      
fi

# security/safety features
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -I'
alias ln='ln -i'

# git
alias g='git'

# svn
alias s='svn'
alias sc='svn status | grep -v ?'
