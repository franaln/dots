# -*- mode: sh -*-
# bash aliases

# ls
alias ls='ls -N --color=auto'
alias sl='ls'
alias ll='ls -lh'
alias la='ls -A'

# emacs
alias emacs='emacs -nw'
alias emw='emacs'
alias ewm='emacs'
alias em='emacs'
alias semw='sudo emacs -nw'

# python
#alias python='python2.7'

# root
alias root='root -l'
alias rootq='root -q'

# tar
alias targz='tar -cvzf'
alias showtar='tar -tvf'
alias untargz='tar -xvzf'

# cd
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'

# music player
alias mocp='mocp -m ~/Music -T dante'
alias ncmpcpp='ncmpcpp -c ~/.config/ncmpcpp/config'

# demas
alias reload='source ~/.bashrc'
alias grep='grep --color=auto'
alias pingg='ping -c 3 www.google.com'
alias diff='colordiff' # requires colordiff package
alias grep='grep --color=auto'
alias df='df -h'
alias du='du -sh'
alias reloadfonts='fc-cache -rv ; xset fp rehash'
alias nocomment='grep -Ev "^(#|$)"'
alias dmesgt='dmesg | tail'
alias setup='test -f setup.sh && source ./setup.sh || echo setup: no setup.sh in the current directory.'
alias lg='ll | grep'

# packages
if [[ `uname -v` == *"Ubuntu"* ]] ; then
    # apt-get and aptitude
    alias apu='sudo apt-get update'
    alias apg='sudo apt-get upgrade'
    alias apdg='sudo apt-get dist-upgrade'
    alias api='sudo aptitude install'
    alias aps='aptitude search'
    alias apr='sudo apt-get remove'
else
    # pacman
    alias pacu='sudo pacman -Syu'
    alias paci='sudo pacman -S'
    alias pacr='sudo pacman -Rs'
    alias pacs='pacsearch'
    alias pacq='pacman -Q'

    # packer
    alias packer='packer --auronly'
    alias auru='packer -Syu'
    alias auri='packer -S'
    alias aurr='packer -R'
    alias aurs='packer -Ss'
fi

# security/safety features
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -I'
alias ln='ln -i'

