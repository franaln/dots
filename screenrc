# basic settings... self explainatory
deflogin on
autodetach on
startup_message off
vbell off


escape ^Oo
#escape ^^^^

# the dash makes it a login shell
defshell bash
defscrollback 10000
nonblock on
defutf8 on
defbce on
defflow off
msgwait 1
altscreen on

hardstatus alwayslastline "%{= w}%-w%{= Bk} %n %t %{-}%+w %-=  %{G}%H %{g}"

termcapinfo xterm* ti@:te@
termcapinfo xterm-color ti@:te@

bind ',' prev
bind '.' next

#screen -t
